<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient android:startColor="#fff5f5f5" android:endColor="#fff5f5f5" android:angle="90.0" android:type="linear" />
            <corners android:radius="1.0dip" />
            <stroke android:width="1.0dip" android:color="#ffd3d3d3" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:startColor="#ffffffff" android:endColor="#ffffffff" android:angle="90.0" android:type="linear" />
            <stroke android:width="1.0dip" android:color="#ffd3d3d3" />
            <corners android:radius="1.0dip" />
        </shape>
    </item>
</selector>